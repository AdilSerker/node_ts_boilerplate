{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "experimentalDecorators": true,
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "exclude": ["./node_modules", "./dist"],
    "include": ["./src/**/*.ts"]
}
